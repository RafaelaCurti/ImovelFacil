generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  Property Property[]
  Messages Messages[]

  @@map("usuarios")
}

model Property {
  id        Int     @id @default(autoincrement())
  tipo      String?
  thumb     String?
  endereco  String?
  cidade    String?
  uf        String?
  valor     String?
  descricao String? @db.VarChar(255)
  name      String
  email     String
  telefone  String
  slug      String
  userId    Int
  author    User    @relation(fields: [userId], references: [id])

  @@map("imoveis")
}

model Messages {
  id              Int    @id @default(autoincrement())
  client_name     String
  client_email    String
  client_mensagem String
  userId          Int
  author          User   @relation(fields: [userId], references: [id])

  @@map("messages")
}
